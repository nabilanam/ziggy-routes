{
  "name": "ziggy-routes",
  "displayName": "Ziggy Routes",
  "description": "Ziggy route completion for vscode",
  "icon": "images/icon.png",
  "publisher": "Nabil",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/nabilanam/ziggy-routes.git"
  },
  "engines": {
    "vscode": "^1.58.0"
  },
  "keywords": [
    "laravel",
    "vue",
    "ziggy",
    "laravel completion",
    "laravel autocompletion"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Ziggy Routes",
        "type": "object",
        "properties": {
          "ZiggyRoutes.autoRunZiggyGenerate": {
            "type": "boolean",
            "default": "true",
            "description": "Enable if you want to generate ziggy.js automatically. Works on routes/web.php."
          },
          "ZiggyRoutes.phpPath": {
            "type": "string",
            "default": "php",
            "description": "Required when ziggy file generation is enabled."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.15",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/require-from-string": "^1.2.1",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "@babel/core": "^7.14.8",
    "@babel/plugin-transform-modules-commonjs": "^7.14.5",
    "require-from-string": "^2.0.2"
  }
}
